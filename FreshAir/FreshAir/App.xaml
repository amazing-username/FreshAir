<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshAir.App">
    <Application.Resources>
        <ResourceDictionary>            <!--Global Styles-->            <Color x:Key="NavigationPrimary">#2196F3</Color>            <Color x:Key="ContentBackground">#ffffff</Color>            <Color x:Key="Button">#787878</Color>            <Color x:Key="ButtonText">#ffffff</Color>            <Color x:Key="TextColor">#999999</Color>            <Color x:Key="Rando">#ffffff</Color>            <Color x:Key="LabelFrontground">#999999</Color>            <Color x:Key="SwitchOn">#21ae21</Color>            <Color x:Key="SliderLineColor">#000000</Color>            <Color x:Key="SliderBackgroundColor"></Color>            <Color x:Key="SliderThumbColor">#f3f3f3</Color>            <Style TargetType="NavigationPage">                <Setter Property="BarBackgroundColor" Value="{DynamicResource NavigationPrimary}" />                <Setter Property="BarTextColor" Value="{DynamicResource Rando}" />            </Style>            <Style TargetType="ContentPage" ApplyToDerivedTypes="True">                <Setter Property="BackgroundColor" Value="{DynamicResource ContentBackground}" />            </Style>            <Style TargetType="Button" ApplyToDerivedTypes="True">                <Setter Property="BackgroundColor" Value="{DynamicResource Button}" />                <Setter Property="TextColor" Value="{DynamicResource ButtonText}" />            </Style>            <Style TargetType="Span" ApplyToDerivedTypes="True">                <Setter Property="ForegroundColor" Value="{DynamicResource LabelFrontground}"/>            </Style>            <Style TargetType="Label">                <Setter Property="TextColor" Value="{DynamicResource TextColor}" />            </Style>            <Style TargetType="Switch">                <Setter Property="BackgroundColor" Value="{DynamicResource ContentBackground}" />                <Setter Property="OnColor" Value="{DynamicResource SwitchOn}" />            </Style>            <Style TargetType="Entry">                <Setter Property="PlaceholderColor" Value="{DynamicResource TextColor}" />                <Setter Property="TextColor" Value="{DynamicResource TextColor}" />            </Style>            <Style TargetType="Slider">                <Setter Property="BackgroundColor" Value="Transparent"/>                <Setter Property="ThumbColor" Value="{DynamicResource SliderThumbColor}" />                <Setter Property="MinimumTrackColor" Value="{DynamicResource SliderLineColor}" />            </Style>        </ResourceDictionary>
    </Application.Resources>
</Application>