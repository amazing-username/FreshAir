<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshAir.Views.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="CurrentPassword"
                   Placeholder="Current Password"
                   IsPassword="True"/>
            <Entry x:Name="NewPassword"
                   Placeholder="New Password"
                   IsPassword="True"/>
            <Entry x:Name="NewPasswordConfirm"
                   Placeholder="New Password (Confirm)"
                   IsPassword="True" />
            <Button x:Name="ChangePassword"
                    Text="Chnage Password"
                    Clicked="ChangePassword_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>